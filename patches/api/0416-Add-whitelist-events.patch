+++ b/src/main/java/io/papermc/paper/event/player/PlayerWhitelistAddEvent.java
@@ -0,0 +1,52 @@
+package io.papermc.paper.event.player;
+
+import org.bukkit.OfflinePlayer;
+import org.bukkit.event.Cancellable;
+import org.bukkit.event.Event;
+import org.bukkit.event.HandlerList;
+import org.jetbrains.annotations.NotNull;
+
+/**
+ * Called when a player is being added to the whitelist
+ */
+public class PlayerWhitelistAddEvent extends Event implements Cancellable {
+
+    private static final HandlerList HANDLER_LIST = new HandlerList();
+    private boolean cancel = false;
+    @NotNull private final OfflinePlayer player;
+
+    public PlayerWhitelistAddEvent(@NotNull OfflinePlayer who) {
+        this.player = who;
+    }
+
+    /**
+     * Gets the player being added to the whitelist
+     *
+     * @return the player being added to the whitelist
+     */
+    @NotNull
+    public OfflinePlayer getPlayer() {
+        return player;
+    }
+
+    @Override
+    public boolean isCancelled() {
+        return cancel;
+    }
+
+    @Override
+    public void setCancelled(boolean cancel) {
+        this.cancel = cancel;
+    }
+
+    @NotNull
+    @Override
+    public HandlerList getHandlers() {
+        return HANDLER_LIST;
+    }
+
+    @NotNull
+    public static HandlerList getHandlerList() {
+        return HANDLER_LIST;
+    }
+}
