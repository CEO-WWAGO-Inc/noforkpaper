diff --git a/src/main/java/org/bukkit/scoreboard/DisplaySlot.java b/src/main/java/org/bukkit/scoreboard/DisplaySlot.java
index 5d58a18b3625fd01ea34969200edc3bc80cbb587..227aea4de1160e1fd9539b075aed3c1b6f8907b0 100644
--- a/src/main/java/org/bukkit/scoreboard/DisplaySlot.java
+++ b/src/main/java/org/bukkit/scoreboard/DisplaySlot.java
@@ -4,7 +4,51 @@ package org.bukkit.scoreboard;
  * Locations for displaying objectives to the player
  */
 public enum DisplaySlot {
-    BELOW_NAME,
-    PLAYER_LIST,
-    SIDEBAR;
+    // Paper start
+    BELOW_NAME("belowName"),
+    PLAYER_LIST("list"),
+    SIDEBAR("sidebar"),
+    SIDEBAR_TEAM_BLACK(net.kyori.adventure.text.format.NamedTextColor.BLACK),
+    SIDEBAR_TEAM_DARK_BLUE(net.kyori.adventure.text.format.NamedTextColor.DARK_BLUE),
+    SIDEBAR_TEAM_DARK_GREEN(net.kyori.adventure.text.format.NamedTextColor.DARK_GREEN),
+    SIDEBAR_TEAM_DARK_AQUA(net.kyori.adventure.text.format.NamedTextColor.DARK_AQUA),
+    SIDEBAR_TEAM_DARK_RED(net.kyori.adventure.text.format.NamedTextColor.DARK_RED),
+    SIDEBAR_TEAM_DARK_PURPLE(net.kyori.adventure.text.format.NamedTextColor.DARK_PURPLE),
+    SIDEBAR_TEAM_GOLD(net.kyori.adventure.text.format.NamedTextColor.GOLD),
+    SIDEBAR_TEAM_GRAY(net.kyori.adventure.text.format.NamedTextColor.GRAY),
+    SIDEBAR_TEAM_DARK_GRAY(net.kyori.adventure.text.format.NamedTextColor.DARK_GRAY),
+    SIDEBAR_TEAM_BLUE(net.kyori.adventure.text.format.NamedTextColor.BLUE),
+    SIDEBAR_TEAM_GREEN(net.kyori.adventure.text.format.NamedTextColor.GREEN),
+    SIDEBAR_TEAM_AQUA(net.kyori.adventure.text.format.NamedTextColor.AQUA),
+    SIDEBAR_TEAM_RED(net.kyori.adventure.text.format.NamedTextColor.RED),
+    SIDEBAR_TEAM_LIGHT_PURPLE(net.kyori.adventure.text.format.NamedTextColor.LIGHT_PURPLE),
+    SIDEBAR_TEAM_YELLOW(net.kyori.adventure.text.format.NamedTextColor.YELLOW),
+    SIDEBAR_TEAM_WHITE(net.kyori.adventure.text.format.NamedTextColor.WHITE);
+
+    public static final net.kyori.adventure.util.Index<String, DisplaySlot> NAMES = net.kyori.adventure.util.Index.create(DisplaySlot.class, DisplaySlot::getId);
+
+    private final String id;
+
+    DisplaySlot(@org.jetbrains.annotations.NotNull String id) {
+        this.id = id;
+    }
+
+    DisplaySlot(@org.jetbrains.annotations.NotNull net.kyori.adventure.text.format.NamedTextColor color) {
+        this.id = "sidebar.team." + color;
+    }
+
+    /**
+     * Get the string id of this display slot.
+     *
+     * @return the string id
+     */
+    public @org.jetbrains.annotations.NotNull String getId() {
+        return id;
+    }
+
+    @Override
+    public String toString() {
+        return this.id;
+    }
+    // Paper end
 }
