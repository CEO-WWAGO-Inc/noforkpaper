From 3482ee84296f64e93291465420e2b742870b5075 Mon Sep 17 00:00:00 2001
From: Andrew Steinborn <git@steinborn.me>
Date: Tue, 8 Oct 2019 20:34:10 -0400
Subject: [PATCH] Fix jline with git builds under Windows


diff --git a/pom.xml b/pom.xml
index beda5dc8a..fa2cdf802 100644
--- a/pom.xml
+++ b/pom.xml
@@ -146,23 +146,28 @@
         <finalName>paper-${minecraft.version}</finalName>
         <defaultGoal>clean install</defaultGoal> <!-- Paper -->
         <plugins>
+            <!-- Paper start: switch out gitdescribe for scriptus, allows us to fix a jline temporary file issue -->
             <plugin>
-                <groupId>com.lukegb.mojo</groupId>
-                <artifactId>gitdescribe-maven-plugin</artifactId>
-                <version>1.3</version>
+                <!-- <groupId>com.lukegb.mojo</groupId> -->
+                <!-- <artifactId>gitdescribe-maven-plugin</artifactId> -->
+                <groupId>net.md-5</groupId>
+                <artifactId>scriptus</artifactId>
+                <version>0.3.1</version>
                 <configuration>
-                    <outputPrefix>git-Paper-</outputPrefix>
+                    <format>git-Paper-%s</format>
                     <scmDirectory>..</scmDirectory>
                 </configuration>
                 <executions>
                     <execution>
                         <phase>compile</phase>
                         <goals>
-                            <goal>gitdescribe</goal>
+                            <!-- <goal>gitdescribe</goal> -->
+                            <goal>describe</goal>
                         </goals>
                     </execution>
                 </executions>
             </plugin>
+            <!-- Paper end -->
             <plugin>
                 <groupId>org.apache.maven.plugins</groupId>
                 <artifactId>maven-jar-plugin</artifactId>
