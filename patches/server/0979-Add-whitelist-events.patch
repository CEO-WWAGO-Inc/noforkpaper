Subject: [PATCH] Add whitelist events


diff --git a/src/main/java/net/minecraft/server/players/UserWhiteList.java b/src/main/java/net/minecraft/server/players/UserWhiteList.java
index a6c70decad1a496595944a5dd2aeeb387757fef3..ada64578a36165cde39db1fd59e320a2861e842c 100644
--- a/src/main/java/net/minecraft/server/players/UserWhiteList.java
+++ b/src/main/java/net/minecraft/server/players/UserWhiteList.java
@@ -30,4 +30,20 @@ public class UserWhiteList extends StoredUserList<GameProfile, UserWhiteListEntr
     protected String getKeyForUser(GameProfile gameProfile) {
         return gameProfile.getId().toString();
     }
+
+    // Paper start - Add whitelist events
+    @Override
+    public void add(UserWhiteListEntry entry) {
+        if (!new io.papermc.paper.event.player.PlayerWhitelistUpdateEvent(org.bukkit.Bukkit.createProfile(entry.getUser().getId()), io.papermc.paper.event.player.PlayerWhitelistUpdateEvent.WhitelistStatus.ADDED).callEvent()) return;
+
+        super.add(entry);
+    }
+
+    @Override
+    public void remove(GameProfile profile) {
+        if (!new io.papermc.paper.event.player.PlayerWhitelistUpdateEvent(org.bukkit.Bukkit.createProfile(profile.getId()), io.papermc.paper.event.player.PlayerWhitelistUpdateEvent.WhitelistStatus.REMOVED).callEvent()) return;
+
+        super.remove(profile);
+    }
+    // Paper end
 }
