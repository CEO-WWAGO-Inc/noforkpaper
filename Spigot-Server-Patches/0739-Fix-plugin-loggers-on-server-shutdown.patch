diff --git a/src/main/java/com/destroystokyo/paper/log/CustomLogManager.java b/src/main/java/com/destroystokyo/paper/log/CustomLogManager.java
new file mode 100644
index 0000000000000000000000000000000000000000..cc9f5e3dd5a43c033a716675450c149be3e2d61d
--- /dev/null
+++ b/src/main/java/com/destroystokyo/paper/log/CustomLogManager.java
@@ -0,0 +1,26 @@
+package com.destroystokyo.paper.log;
+
+import java.util.logging.LogManager;
+
+public class CustomLogManager extends LogManager {
+    private static CustomLogManager instance;
+
+    public CustomLogManager() {
+        instance = this;
+    }
+
+    @Override
+    public void reset() {
+        // Ignore calls to this method
+    }
+
+    private void superReset() {
+        super.reset();
+    }
+
+    public static void forceReset() {
+        if (instance != null) {
+            instance.superReset();
+        }
+    }
+}
