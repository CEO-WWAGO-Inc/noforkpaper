diff --git a/src/main/java/org/bukkit/Bukkit.java b/src/main/java/org/bukkit/Bukkit.java
index dd97a686d2d302ec63120b099c0a116a26f5b824..f22ff7ddf31391060cfcb78df053b69bb7724d1d 100644
