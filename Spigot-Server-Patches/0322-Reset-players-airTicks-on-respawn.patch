@@ -2326,6 +2326,7 @@ public abstract class Entity implements INamableTileEntity, ICommandListener, Ke
 
     }
 
+    public int getMaxAirTicks() { return bw(); } // Paper - OBFHELPER
     public int bw() {
         return 300;
     }
