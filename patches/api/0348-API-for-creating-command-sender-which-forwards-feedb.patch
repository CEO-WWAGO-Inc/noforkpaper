diff --git a/src/main/java/org/bukkit/Bukkit.java b/src/main/java/org/bukkit/Bukkit.java
index 9035c56dad77731e7c77dbefaaf1b8c595bc74a5..9e89982278c43ad9ff43b617d432e28c5f89c780 100644
