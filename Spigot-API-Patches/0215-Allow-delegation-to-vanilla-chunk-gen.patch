diff --git a/src/main/java/org/bukkit/Bukkit.java b/src/main/java/org/bukkit/Bukkit.java
index 2602cd4645e41ce433a4a57d13ae8c57c6787b58..4613f23120a5e4f514279e032b150a985d226ece 100644
