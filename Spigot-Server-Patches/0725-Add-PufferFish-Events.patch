diff --git a/src/main/java/net/minecraft/world/entity/animal/EntityPufferFish.java b/src/main/java/net/minecraft/world/entity/animal/EntityPufferFish.java
index e9f20d387ccdacfbb1a48dc31e2a6cd4843a0d7b..d5003ce87dd5f7419941611213b63ffe10fada28 100644
--- a/src/main/java/net/minecraft/world/entity/animal/EntityPufferFish.java
+++ b/src/main/java/net/minecraft/world/entity/animal/EntityPufferFish.java
@@ -89,25 +89,39 @@ public class EntityPufferFish extends EntityFish {
     public void tick() {
         if (!this.world.isClientSide && this.isAlive() && this.doAITick()) {
             if (this.c > 0) {
+                boolean increase = true; // Paper - Add PufferFish events
                 if (this.getPuffState() == 0) {
+                    if (new io.papermc.paper.event.entity.PufferFishInflateEvent((org.bukkit.entity.PufferFish) getBukkitEntity(), 1).callEvent()) { // Paper - Add PufferFish events
                     this.playSound(SoundEffects.ENTITY_PUFFER_FISH_BLOW_UP, this.getSoundVolume(), this.dH());
                     this.setPuffState(1);
+                    } else { increase = false; } // Paper - Add PufferFish events
                 } else if (this.c > 40 && this.getPuffState() == 1) {
+                    if (new io.papermc.paper.event.entity.PufferFishInflateEvent((org.bukkit.entity.PufferFish) getBukkitEntity(), 2).callEvent()) { // Paper - Add PufferFish events
                     this.playSound(SoundEffects.ENTITY_PUFFER_FISH_BLOW_UP, this.getSoundVolume(), this.dH());
                     this.setPuffState(2);
+                    } else { increase = false; } // Paper - Add PufferFish events
                 }
 
+                if (increase) { // Paper - Add PufferFish events
                 ++this.c;
+                } // Paper - Add PufferFish events
             } else if (this.getPuffState() != 0) {
+                boolean increase = true; // Paper - Add PufferFish events
                 if (this.d > 60 && this.getPuffState() == 2) {
+                    if (new io.papermc.paper.event.entity.PufferFishDeflateEvent((org.bukkit.entity.PufferFish) getBukkitEntity(), 1).callEvent()) { // Paper - Add PufferFish events
                     this.playSound(SoundEffects.ENTITY_PUFFER_FISH_BLOW_OUT, this.getSoundVolume(), this.dH());
                     this.setPuffState(1);
+                    } else { increase = false; } // Paper - Add PufferFish events
                 } else if (this.d > 100 && this.getPuffState() == 1) {
+                    if (new io.papermc.paper.event.entity.PufferFishDeflateEvent((org.bukkit.entity.PufferFish) getBukkitEntity(), 0).callEvent()) { // Paper - Add PufferFish events
                     this.playSound(SoundEffects.ENTITY_PUFFER_FISH_BLOW_OUT, this.getSoundVolume(), this.dH());
                     this.setPuffState(0);
+                    } else { increase = false; } // Paper - Add PufferFish events
                 }
 
+                if (increase) { // Paper - Add PufferFish events
                 ++this.d;
+                } // Paper - Add PufferFish events
             }
         }
 
