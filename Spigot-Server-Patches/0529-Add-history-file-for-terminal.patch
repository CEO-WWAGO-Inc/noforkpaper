+++ b/src/main/java/com/destroystokyo/paper/console/PaperConsole.java
@@ -5,6 +5,7 @@ import net.minecrell.terminalconsole.SimpleTerminalConsole;
 import org.bukkit.craftbukkit.command.ConsoleCommandCompleter;
 import org.jline.reader.LineReader;
 import org.jline.reader.LineReaderBuilder;
+import java.nio.file.Paths;
 
 public final class PaperConsole extends SimpleTerminalConsole {
 
@@ -18,6 +20,7 @@ public final class PaperConsole extends SimpleTerminalConsole {
     protected LineReader buildReader(LineReaderBuilder builder) {
         return super.buildReader(builder
                 .appName("Paper")
+                .variable(LineReader.HISTORY_FILE, Paths.get(".history"))
                 .completer(new ConsoleCommandCompleter(this.server))
         );
     }
