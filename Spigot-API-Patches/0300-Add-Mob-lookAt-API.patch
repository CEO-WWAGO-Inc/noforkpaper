Subject: [PATCH] Add Mob#lookAt API


diff --git a/src/main/java/org/bukkit/entity/Mob.java b/src/main/java/org/bukkit/entity/Mob.java
index d726453c041a980576312b6bee96a07837f37974..e50dc65df2b2c83b9a815652d8c4c5ab3c175e52 100644
--- a/src/main/java/org/bukkit/entity/Mob.java
+++ b/src/main/java/org/bukkit/entity/Mob.java
@@ -1,5 +1,6 @@
 package org.bukkit.entity;
 
+import org.bukkit.Location;
 import org.bukkit.loot.Lootable;
 import org.jetbrains.annotations.NotNull;
 import org.jetbrains.annotations.Nullable;
@@ -23,6 +24,88 @@ public interface Mob extends LivingEntity, Lootable {
      * @return True if mob is exposed to daylight
      */
     boolean isInDaylight();
+
+    /**
+     * Look at a specific Location
+     * <p>
+     * Useful when implementing custom mob goals
+     *
+     * @param location location to look at
+     */
+    void lookAt(@NotNull Location location);
+
+    /**
+     * Look at a specific Location
+     * <p>
+     * Useful when implementing custom mob goals
+     *
+     * @param location location to look at
+     * @param yawSpeed max speed of head yaw rotation
+     * @param pitchSpeed max speed of head pitch rotation
+     */
+    void lookAt(@NotNull Location location, float yawSpeed, float pitchSpeed);
+
+    /**
+     * Look at a specific Entity
+     * <p>
+     * If a LivingEntity, look at eye location
+     * <p>
+     * Useful when implementing custom mob goals
+     *
+     * @param entity entity to look at
+     */
+    void lookAt(@NotNull Entity entity);
+
+    /**
+     * Look at a specific Entity
+     * <p>
+     * If a LivingEntity, look at eye location
+     * <p>
+     * Useful when implementing custom mob goals
+     *
+     * @param entity entity to look at
+     * @param yawSpeed max speed of head yaw rotation
+     * @param pitchSpeed max speed of head pitch rotation
+     */
+    void lookAt(@NotNull Entity entity, float yawSpeed, float pitchSpeed);
+
+    /**
+     * Look at a specific position
+     * <p>
+     * Useful when implementing custom mob goals
+     *
+     * @param x x coordinate
+     * @param y y coordinate
+     * @param z z coordinate
+     */
+    void lookAt(double x, double y, double z);
+
+    /**
+     * Look at a specific position
+     * <p>
+     * Useful when implementing custom mob goals
+     *
+     * @param x x coordinate
+     * @param y y coordinate
+     * @param z z coordinate
+     * @param yawSpeed max speed of head yaw rotation
+     * @param pitchSpeed max speed of head pitch rotation
+     */
+    void lookAt(double x, double y, double z, float yawSpeed, float pitchSpeed);
+
+    /**
+     * Get the speed for head yaw rotations
+     *
+     * @return yaw rotation speed
+     */
+    int getLookYawSpeed();
+
+    /**
+     * Get the speed for head pitch rotations
+     *
+     * @return pitch rotation speed
+     */
+    int getLookPitchSpeed();
     // Paper end
 
     /**
