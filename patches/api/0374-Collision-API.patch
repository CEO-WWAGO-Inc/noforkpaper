+++ b/src/main/java/org/bukkit/generator/LimitedRegion.java
@@ -191,5 +191,17 @@ public interface LimitedRegion extends RegionAccessor {
     default int getCenterBlockZ() {
         return getCenterChunkZ() << 4;
     }
+
+    /**
+     * Checks for any collisions in the given boundingbox.
+     * This will check for any colliding hard entities (boats, shulkers) / worldborder / blocks.
+     * Chunks within the bounding box that are outside the limited region will be skipped.
+     *
+     * @param boundingBox the box to check collisions in
+     * @return collides or not
+     */
+    @Override
+    boolean collidesWith(@NotNull org.bukkit.util.BoundingBox boundingBox);
+
     // Paper end
 }
