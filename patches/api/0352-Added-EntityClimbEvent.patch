+package io.papermc.paper.event.entity;
+
+import org.bukkit.block.Block;
+import org.bukkit.entity.LivingEntity;
+import org.bukkit.event.Cancellable;
+import org.bukkit.event.HandlerList;
+import org.bukkit.event.entity.EntityEvent;
+import org.jetbrains.annotations.NotNull;
+
+/**
+ * Is called when a Entity goes up a Climbable block
+ */
+public class EntityClimbEvent extends EntityEvent{
+
+    private static final HandlerList HANDLER_LIST = new HandlerList();
+    private Block climbableBlock;
+
+    public EntityClimbEvent(@NotNull LivingEntity entity, @NotNull Block climbableBlock) {
+        super(entity);
+        this.climbableBlock = climbableBlock;
+    }
+
+    @NotNull
+    @Override
+    public HandlerList getHandlers() {
+        return HANDLER_LIST;
+    }
+
+    @NotNull
+    public static HandlerList getHandlerList() {
+        return HANDLER_LIST;
+    }
+
+    /**
+     *
+     * @return The Block the Entity is climbing on
+     */
+    @NotNull
+    public Block getClimbableBlock() {
+        return climbableBlock;
+    }
+}
