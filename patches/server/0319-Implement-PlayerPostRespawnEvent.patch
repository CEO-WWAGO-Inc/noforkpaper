@@ -723,9 +723,15 @@ public abstract class PlayerList {
 
         boolean flag2 = false;
 
+        // Paper start
+        boolean isBedSpawn = false;
+        boolean isAnchorSpawn = false;
+        boolean isRespawn = false;
