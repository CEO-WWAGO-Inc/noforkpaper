Subject: [PATCH] Expose display item methods for possible throwable
 projectiles


diff --git a/src/main/java/com/destroystokyo/paper/entity/projectile/ThrowableProjectile.java b/src/main/java/com/destroystokyo/paper/entity/projectile/ThrowableProjectile.java
new file mode 100644
index 00000000..88dbf746
--- /dev/null
+++ b/src/main/java/com/destroystokyo/paper/entity/projectile/ThrowableProjectile.java
@@ -0,0 +1,25 @@
+package com.destroystokyo.paper.entity.projectile;
+
+import org.bukkit.Material;
+import org.bukkit.inventory.ItemStack;
+import org.jetbrains.annotations.NotNull;
+import org.jetbrains.annotations.Nullable;
+
+public interface ThrowableProjectile {
+    /**
+     * Get this projectile's current display item.
+     *
+     * @return This projectile's current display item.
+     */
+    @NotNull
+    ItemStack getDisplayItem();
+
+    /**
+     * Set this projectile's display item. Setting the display item
+     * to null, or if its type is {@link Material#isEmpty}, will result
+     * in the display item becoming the default item.
+     *
+     * @param displayItem The new display item.
+     */
+    void setDisplayItem(@Nullable ItemStack displayItem);
+}
