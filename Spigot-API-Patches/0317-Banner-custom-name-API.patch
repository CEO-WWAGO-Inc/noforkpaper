Subject: [PATCH] Banner custom name API


diff --git a/src/main/java/org/bukkit/block/Banner.java b/src/main/java/org/bukkit/block/Banner.java
index e6eb3c04b9fa6cd232f95dd5851d365234972efd..5f9a3710825cc84ab1276d7e26707ebdfcbdd308 100644
--- a/src/main/java/org/bukkit/block/Banner.java
+++ b/src/main/java/org/bukkit/block/Banner.java
@@ -83,4 +83,25 @@ public interface Banner extends TileState {
      * @return the number of patterns
      */
     int numberOfPatterns();
+    // Paper start
+    /**
+     * Get the custom name of the banner.
+     *
+     * @return the custom name, null if none is present
+     */
+    @org.jetbrains.annotations.Nullable
+    net.kyori.adventure.text.Component customName();
+    /**
+     * Check if the banner has a custom name.
+     *
+     * @return true if it has a custom name, false otherwise
+     */
+    boolean hasCustomName();
+    /**
+     * Set the custom name of the banner.
+     *
+     * @param name the custom name
+     */
+    void customName(@org.jetbrains.annotations.Nullable net.kyori.adventure.text.Component name);
+    // Paper end
 }
