diff --git a/pom.xml b/pom.xml
index 80f165291385f5f54def1a8e8487b209fb06a4a3..1c977a86df6e45ce0d07ec46cf6cd5f0eab0e879 100644
--- a/pom.xml
+++ b/pom.xml
@@ -228,6 +228,28 @@
                     </archive>
                 </configuration>
             </plugin>
+            <plugin>
+                <groupId>org.codehaus.mojo</groupId>
+                <artifactId>exec-maven-plugin</artifactId>
+                <version>1.2</version>
+                <executions>
+                    <execution>
+                        <phase>prepare-package</phase>
+                        <goals>
+                            <goal>exec</goal>
+                        </goals>
+                        <id>generate-language-files</id>
+                    </execution>
+                </executions>
+                <configuration>
+                    <workingDirectory>${project.parent.basedir}</workingDirectory>
+                    <executable>./work/mc-localization-downloader/downloadLanguages.bash</executable>
+                    <arguments>
+                        <argument>${minecraft.version}</argument>
+                        <argument>${project.build.directory}/classes/assets/minecraft/lang/</argument>
+                    </arguments>
+                </configuration>
+            </plugin>
             <plugin>
                 <groupId>org.apache.maven.plugins</groupId>
                 <artifactId>maven-shade-plugin</artifactId>
