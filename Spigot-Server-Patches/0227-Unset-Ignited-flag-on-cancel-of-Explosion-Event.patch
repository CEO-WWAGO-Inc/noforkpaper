     private int fuseTicks;
     public int maxFuseTicks = 30;
@@ -219,6 +219,7 @@ public class EntityCreeper extends EntityMonster {
                 this.createEffectCloud();
             } else {
                 fuseTicks = 0;
+                this.datawatcher.set(isIgnitedDW, Boolean.valueOf(false)); // Paper
             }
